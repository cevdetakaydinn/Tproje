<%=render "admin/sidebar"%>
<div id="page-content-wrapper">
  <p id="notice"><%= notice %></p>

  <h1>İndirimler</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Miktar</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @discounts.each do |discount| %>
        <tr>
          <td><%= discount.amount %></td>
          <td><%= link_to 'Göster', discount, class:"btn btn-info"%></td>
          <td><%= link_to 'Düzenle', edit_discount_path(discount) , class:"btn btn-warning"%></td>
          <td><%= link_to 'Sil', discount, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Yeni İndirim', new_discount_path, class:"btn btn-success" %>
</div>
