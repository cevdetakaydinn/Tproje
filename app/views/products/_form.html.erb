<%= simple_form_for @product do |f| %>
<div class="row">


    <div class="col-xs-6 jumbotron">
      <%= f.input :name %>
      <b>Alt Kategori:</b>
      </br>
      <%= f.select :subcategory_id, Subcategory.all.map { |l| [l.name, l.id, { class: l.id }] }, include_blank: true%>
      </br>
      <b>Marka</b>
      </br>
      <%= f.select :brand_id, Brand.all.map { |l| [l.name, l.id, { class: l.id }] }, include_blank: true%>
      <%= f.input :price,label:"Fiyat" %>
      <%= f.input :icon, as: :file ,label:"Kapak Resmi"%>
    </div>
</div>
<div class="row">
  <div class="jumbotron col-xs-6">
    <h3>Diğer Resimler</h3>
    <div id='pictures'>
      <%= f.simple_fields_for :pictures do |picture| %>
        <%= render 'picture_fields', :f => picture %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'Resim Ekle', f, :pictures , class:"btn btn-success"%>
      </div>
    </div>
  </div>
</div>


    <%= f.button :submit ,"Urunu Düzenle",class:"btn btn-warning"%>
<% end %>
